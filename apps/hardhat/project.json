{
  "projectType": "application",
  "root": "apps/hardhat",
  "sourceRoot": "apps/hardhat/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nrwl/web:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/hardhat",
        "compiler": "babel",
        "index": "apps/hardhat/src/index.html",
        "baseHref": "/",
        "main": "apps/hardhat/src/main.ts",
        "polyfills": "apps/hardhat/src/polyfills.ts",
        "tsConfig": "apps/hardhat/tsconfig.app.json",
        "assets": ["apps/hardhat/src/favicon.ico", "apps/hardhat/src/assets"],
        "styles": ["apps/hardhat/src/styles.css"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/hardhat/src/environments/environment.ts",
              "with": "apps/hardhat/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/web:dev-server",
      "options": {
        "buildTarget": "hardhat:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "hardhat:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/hardhat/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/hardhat"],
      "options": {
        "jestConfig": "apps/hardhat/jest.config.js",
        "passWithNoTests": true
      }
    }
  }
}
