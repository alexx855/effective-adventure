{
  "root": "apps/hardhat",
  "sourceRoot": "apps/hardhat/src",
  "projectType": "application",
  "targets": {
    "start": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "hardhat run ./apps/hardhat/scripts/deploy.ts"
          }
        ]
      }
    },
    "chain": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "hardhat node --network hardhat --show-stack-traces"
          }
        ]
      }
    },
    "accounts": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "hardhat accounts"
          }
        ]
      }
    },
    "coverage": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "hardhat coverage"
          }
        ]
      }
    },
    "clean": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "hardhat clean"
          }
        ]
      }
    },
    "compile": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "hardhat compile"
          }
        ]
      }
    },
    "test": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "hardhat test --show-stack-traces"
          }
        ]
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "hardhat:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/hardhat/**/*.ts"]
      }
    }
  },
  "tags": []
}
